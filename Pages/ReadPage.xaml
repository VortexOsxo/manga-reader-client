<Page x:Class="MangaReader.Pages.ReadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:MangaReader.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReadPage"
      Background="{StaticResource AppBackgroundColor}">

    <Grid>
        <controls:PageIndexControl HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25px" />
        <controls:AutoReadControl HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="25px" />
        <controls:NavBarControl HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="25px" />
        <controls:ReaderControl x:Name="readerControl"/>
    </Grid>
</Page>
