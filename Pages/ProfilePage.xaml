<Page x:Class="MangaReader.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MangaReader.Pages"
      xmlns:controls="clr-namespace:MangaReader.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage"
      Background="{StaticResource AppBackgroundColor}">

    <Grid>
        <controls:NavBarControl HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="25px" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50px" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50px" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Profile Page" FontSize="24" Margin="10" />

            <TextBlock Grid.Row="1" Text="History" FontSize="20"/>
            <Grid Grid.Row="2" x:Name="HistorySelectionGrid"/>

            <TextBlock Grid.Row="3" Text="Favorites" FontSize="20"/>
            <Grid Grid.Row="4" x:Name="FavoriteSelectionGrid"/>
        </Grid>
    </Grid>
</Page>
