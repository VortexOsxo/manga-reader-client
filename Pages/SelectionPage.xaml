<Page x:Class="MangaReader.Pages.SelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:MangaReader.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectionPage"
      Background="{StaticResource AppBackgroundColor}">

    <Grid>
        <controls:NavBarControl HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="25px" />
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Selection Page" FontSize="24" Margin="10" />

            <WrapPanel x:Name="PreviewsPanel" Grid.Row="1">
            
            </WrapPanel>
        </Grid>
    </Grid>
</Page>
