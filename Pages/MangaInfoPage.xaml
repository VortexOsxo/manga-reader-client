<Page x:Class="MangaReader.Pages.MangaInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MangaReader.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MangaInfoPage"
      xmlns:controls="clr-namespace:MangaReader.UserControls"
      Background="{StaticResource AppBackgroundColor}">

    <Grid>
        <controls:NavBarControl HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="25px" />
        
        <StackPanel Orientation="Horizontal">

            <Grid x:Name="PreviewGrid"></Grid>
            <Grid x:Name="ChaptersGrid"></Grid>
        </StackPanel>
    </Grid>

</Page>
