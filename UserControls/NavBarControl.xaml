<UserControl x:Class="MangaReader.UserControls.NavBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MangaReader.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Background="Turquoise" Padding="5">
        <StackPanel>
            <Image Source="pack://application:,,,/Assets/book.png" Width="64" Height="64" Margin="16" MouseLeftButtonUp="BookClicked"/>
            <Image Source="pack://application:,,,/Assets/user.png" Width="64" Height="64" Margin="16" MouseLeftButtonUp="UserClicked"/>
        </StackPanel>
    </Border>
</UserControl>
