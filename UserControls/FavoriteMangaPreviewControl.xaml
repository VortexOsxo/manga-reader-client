<UserControl x:Class="MangaReader.UserControls.FavoriteMangaPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MangaReader.UserControls"
             mc:Ignorable="d">
    <Grid Width="220" Height="340">
        <Grid x:Name="PreviewGrid"/>
        <Image Source="{Binding ImagePath}" Width="50" Height="50" MouseLeftButtonUp="FavoriteButtonToggled"
               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10px"/>
    </Grid>
</UserControl>
