<UserControl x:Class="MangaReader.UserControls.ChapterSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MangaReader.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="8" Margin="5" Width="200" Height="320">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="ChaptersPanel" Margin="10" ClipToBounds="True">
                <TextBlock Text="Continue Reading" PreviewMouseDown="ContinueReadingTextBlock_PreviewMouseDown" Margin="5"></TextBlock>
                <TextBlock Text="First Chapter" PreviewMouseDown="FirstChapterTextBlock_PreviewMouseDown" Margin="5"></TextBlock>
                <TextBlock Text="Last Chapter" PreviewMouseDown="LastChapterTextBlock_PreviewMouseDown" Margin="5"></TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
